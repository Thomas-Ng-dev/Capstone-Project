@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Add New Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Code</th>
                <th>Net Weight</th>
                <th>Gross Weight</th>
                <th>Hazardous</th>
                <th>UN Number</th>
                <th>Price</th>
                <th>Bulk Rate at 10+</th>
                <th>Bulk Rate at 100+</th>
                <th>Inventory</th>
                <th>Vendor</th>
                <th>ImageURL</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @* Use @ to introduce C# code. List is sorted by ascending order of names as default *@
            @foreach (var product in Model.OrderBy(x => x.Name))
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.ProductCode</td>
                    <td>@product.NetWeight</td>
                    <td>@product.GrossWeight</td>
                    <td>@product.IsHazardous</td>
                    <td>@product.UNnumber</td>
                    <td>@product.Price</td>
                    <td>@product.BulkRate10</td>
                    <td>@product.BulkRate100</td>
                    <td>@product.Inventory</td>
                    <td>@product.Customer.Name</td>
                    <td>@product.ImageURL</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-dash-circle"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>