@model Product
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create New Customer</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            @* asp-for uses the @Model properties for this form, does not need to add "type=text" *@
            <label asp-for=Name class="p-0"></label>
            <input asp-for=Name class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=ProductCode class="p-0"></label>
            <input asp-for=ProductCode class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=NetWeight class="p-0"></label>
            <input asp-for=NetWeight class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=GrossWeight class="p-0"></label>
            <input asp-for=GrossWeight class="form-control" />
        </div>
        <div class="mb-3 row">
            @* Fix this boolean in the form? *@
            <label asp-for=IsHazardous class="p-0"></label>
            <input asp-for=IsHazardous class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=Inventory class="p-0"></label>
            <input asp-for=Inventory class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>

@* Allows for client side validation from the shared partial view which has JS stored in it *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}