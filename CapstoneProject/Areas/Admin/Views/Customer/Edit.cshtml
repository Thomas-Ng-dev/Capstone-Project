@model Customer
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Customer</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for=Name class="p-0"></label>
            <input asp-for=Name class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=Address class="p-0"></label>
            <input asp-for=Address class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=City class="p-0"></label>
            <input asp-for=City class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=Region class="p-0"></label>
            <input asp-for=Region class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=PostalCode class="p-0"></label>
            <input asp-for=PostalCode class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=Country class="p-0"></label>
            <input asp-for=Country class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=Email class="p-0"></label>
            <input asp-for=Email class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for=Phone class="p-0"></label>
            <input asp-for=Phone class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>

@* Allows for client side validation from the shared partial view which has JS stored in it *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}