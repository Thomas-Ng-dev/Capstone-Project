@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageURL" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <p class="card-title h5 text-primary opacity-75 text-uppercase text-center">@product.Name</p>
                            <p class="card-title h5 text-secondary opacity-75 text-uppercase text-center">Code: @product.ProductCode</p>
                            <p class="card-title text-warning text-center">by <b>@product.Customer.Name</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-light opacity-75 text-center">Price: @product.Price.ToString("c")</p>
                        </div>
                        <div>
                            @* Add link to product pages later *@
                            <a href="" class="btn btn-primary bg-gradient border-0 form-control">
                                Bulk Pricing available!
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
