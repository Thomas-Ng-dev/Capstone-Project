@model Customer
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create New Customer</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label class="p-0">Company Name</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-0">Street Address</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-0">City</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-0">Stats/Province</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-0">Postal Code</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-0">Country</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-0">E-mail</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-0">Phone</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>